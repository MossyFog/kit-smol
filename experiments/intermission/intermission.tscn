[sub_resource type="GDScript" id="GDScript_vsya1"]
script/source = "@tool
extends RichTextLabel

@export var main_text : String = \"Test\"

@onready var rainbow_start : String = \"[rainbow freq=0.08 sat=1.0 val=0.85 speed=27.0]\"
@onready var rainbow_end   : String = \"[/rainbow]\"

@onready var wave_start : String = \"[wave amp=50.0 freq=5.0 connected=1]\"
@onready var wave_end   : String = \"[/wave]\"

@onready var tornado_start : String = \"[tornado radius=17.0 freq=2.0 connected=1]\"
@onready var tornado_end   : String = \"[/tornado]\"

@onready var text_start : String = rainbow_start + wave_start + tornado_start
@onready var text_end   : String = tornado_end + wave_end + rainbow_end

var change_text : bool = false

func _ready() -> void:
	text = text_start + main_text + text_end


func _process(_delta: float) -> void:
	if (change_text):
		text = text_start + main_text + text_end
		change_text = false
	if (self.property_list_changed):
		text = text_start + main_text + text_end
		change_text = false

func _on_text_edit_send_text(txt: String) -> void:
	main_text = txt
	change_text = true
	print(\"Received text: \", txt)

#class rainbow extends RichTextLabel:
	#var rainbow
"

[sub_resource type="GDScript" id="GDScript_a1nl8"]
script/source = "@tool
extends TextEdit

signal send_text(txt: String)

func _emit_text() -> void:
	send_text.emit(text)
	print(\"Emitting text: \", text)


func _on_button_pressed() -> void:
	_emit_text()
"

